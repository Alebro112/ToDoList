<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/headColor"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/titlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tunniplan"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="@color/headTitleColor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:background="@drawable/bgitemdoes"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newtask"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:text="New Task"
            android:textSize="32sp"
            android:textAlignment="center"

            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/titledoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bginputtask"
            android:hint="Name"
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/mainTextColor"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/descdoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bginputtask"
            android:hint="Discription"
            android:justificationMode="inter_word"
            android:padding="16dp"
            android:textColor="@color/mainTextColor"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSaveTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/bgbtnedit"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/bgbtncancel"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#593F62"
                android:textSize="32dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>