<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/headColor"
        android:layout_height="56dp">
        <TextView
            android:id="@+id/titlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tunniplan"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="@color/headTitleColor"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bgitemdoes"
        android:layout_margin="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:id="@id/titledoes"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bginputtask"

            android:textSize="32sp"
            android:textColor="@color/mainTextColor"
            android:text="Does Name" />

        <EditText
            android:id="@+id/descdoes"
            android:padding="16dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:background="@drawable/bginputtask"
            android:justificationMode="inter_word"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took "
            android:textSize="24sp"
            android:textColor="@color/mainTextColor"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="18dp"
                android:id="@+id/btnSaveUpdate"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="32dp"
                android:textColor="#FFF"
                android:background="@drawable/bgbtnedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="32dp"
                android:textColor="#593F62"
                android:background="@drawable/bgbtncancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>